<div>
<%= form_for(portfolio_item) do |f| %>
    <div class="row">
        <div class="col col-md-6">
            <div class="form-group">
                <%= f.label :title %>
                <%= f.text_field :title, class: "form-control" %>
            </div>

            <div class="form-group">
                <%= f.label :subtitle %>
                <%= f.text_field :subtitle, class: "form-control" %>
            </div>

            <div class="form-group">
                <label class="btn btn-primary">
                    Upload a main image <%= f.file_field :main_image, style: 'display:none;' %>
                </label>
            </div>
            
            
            <div class="form-group">
                <label class="btn btn-primary">
                    Upload a thumb image <%= f.file_field :thumb_image, style: 'display:none;' %>
                </label>
            </div>
            
        </div>
        <div class="col col-md-6">
            <div class = "form-group">
                <%= f.label :body %>
                <%= f.text_area :body, class: "form-control", rows: 6 %>
            </div>
        </div>
    </div>
    <hr>
    <div class="row">	
        <div class="col col-md-12">
            <%= f.fields_for :technologies do |technology_form| %>
                <div>
                    <%= technology_form.label :name %>
                    <%= technology_form.text_field :name %>
                </div>
            <% end %>
	</div>
	<div class="actions">
        <%= f.submit "Save portfolio", class: "btn btn-primary btn-block" %>
	</div>
<% end %>
</div>

