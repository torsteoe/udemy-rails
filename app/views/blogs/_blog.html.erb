<div class="blog-post-title">
    <h2><%= link_to blog.title, blog %></h2>
</div>
<div class="blog-post-meta">
    <div class="row">
        <div class="col col-md-6">
            <p>Published <%= distance_of_time_in_words(blog.created_at, Time.now)  %> ago</p>
        </div>
        <div class="col col-md-6">
            <%= render partial: 'blogs/admin_actions', locals: {blog: blog} if logged_in?(:site_admin)  %>
        </div>
    </div>

</div>
<p><%= blog.body %></p>
